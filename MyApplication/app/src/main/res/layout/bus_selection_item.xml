<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/radius"
    android:orientation="horizontal"
    android:padding="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"> <!-- 아래쪽 padding 추가 -->

    <TextView
        android:id="@+id/menu_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="100번 삼선교.한성대학교(중) 방면"
        android:textColor="#000000"
        android:textSize="18sp" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <TextView
        android:id="@+id/bus_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bus_type_radius"
        android:text="Low Bus"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_marginRight="5dp"
        android:textColor="#0074FF"
        android:textStyle="bold" />

</LinearLayout>