<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/busstop_list_item">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="54dp"
            android:layout_marginRight="35dp"
            app:srcCompat="@drawable/home_busstop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="20dp">

                <TextView
                    android:id="@+id/txt_busstop_name_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/aldrich"
                    android:text="성신여대입구역3번출구"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/view4"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/wheelchair_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/wheelchair" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/txt_busstop_num_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08457"
                    android:fontFamily="@font/aldrich"
                    android:textSize="15sp"
                    android:textColor="@color/busspot_num_gray"
                    android:layout_marginRight="25dp"/>

                <TextView
                    android:id="@+id/txt_busstop_book_num_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="예약 1"
                    android:textColor="@color/bus_blue"
                    android:textSize="15sp"
                    android:fontFamily="@font/aldrich"
                    android:layout_marginRight="25dp"/>

                <TextView
                    android:id="@+id/txt_busstop_out_num_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/bus_green"
                    android:fontFamily="@font/aldrich"
                    android:text="하차 1" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/home_list_line" />
</LinearLayout>